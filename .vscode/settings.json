{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "[astro]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro"
  ],
  "cSpell.words": [
    "astro",
    "biome",
    "deno",
    "dprint",
    "esbuild",
    "nextjs",
    "nuxt",
    "obuild",
    "pnpm",
    "preact",
    "qwik",
    "rollup",
    "rsbuild",
    "rslib",
    "rspack",
    "shadcn",
    "svelte",
    "tailwindcss",
    "vitepress",
    "vitest",
    "webdriverio"
  ]
}
