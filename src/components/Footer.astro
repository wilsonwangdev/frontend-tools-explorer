---
// Import package.json data for version
const packageJson = await import('../../package.json');
const version = packageJson.default.version;

interface Props {
  className?: string;
}

const { className = 'mt-12 pb-6 text-center text-sm' } = Astro.props;
---

<footer class={className} style="color: var(--color-text-secondary);">
    <div class="flex flex-col items-center">
        <div>v{version} &copy; {new Date().getFullYear()} Frontend Tools Explorer</div>
    </div>
</footer>