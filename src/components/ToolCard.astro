---
import type { Tool } from '../data';
import DefaultLogo from './DefaultLogo.astro';

type Props = Pick<Tool, 'icon' | 'name' | 'description' | 'category' | 'docsLink' | 'githubLink'>;

const { icon, name, description, category, docsLink, githubLink } = Astro.props;
---

<tr class="hover:bg-gray-50">
  <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
    <div class="w-8 h-8 flex items-center justify-center">
      {icon ? (
        <img
          src={icon}
          alt={`${name} icon`}
          width={24}
          height={24}
          class="w-6 h-6 object-contain"
          crossorigin="anonymous"
        />
      ) : (
        <DefaultLogo text={name} category={category} />
      )}
    </div>
  </td>
  <td class="px-4 sm:px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900">{name}</div>
  </td>
  <td class="px-4 sm:px-6 py-4 whitespace-normal hidden md:table-cell">
    <div class="text-sm text-gray-500">{description}</div>
  </td>
  <td class="px-4 sm:px-6 py-4 whitespace-nowrap hidden sm:table-cell">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
      {category}
    </span>
  </td>
  <td class="px-4 sm:px-6 py-4 whitespace-nowrap text-sm">
    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-3">
      <a
        href={docsLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-3 py-1 rounded-full bg-blue-50 text-blue-600 hover:bg-blue-100 transition-colors duration-200 text-sm gap-1 w-full sm:w-auto justify-center"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
        </svg>
        <span>Docs</span>
      </a>
      <a
        href={githubLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-3 py-1 rounded-full bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors duration-200 text-sm gap-1 w-full sm:w-auto justify-center"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>GitHub</span>
      </a>
    </div>
  </td>
</tr>